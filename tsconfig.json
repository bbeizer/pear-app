{
  "compilerOptions": {
    "strict": true,
    "jsx": "react",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "module": "nodenext",
    "allowJs": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "types": [
      "expo-router",
      "jest",
      "react",
      "react-native"
    ],
    "allowImportingTsExtensions": false
  },
  "extends": "expo/tsconfig.base"
}